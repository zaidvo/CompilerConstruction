# Test file for for-loops in CalcScript++

# Test 1: Basic for loop
print "=== Test 1: Basic For Loop ==="
for int i = 0; i < 5; i = i + 1:
    print "Iteration:"
    print i
end

# Test 2: For loop with calculations
print "\n=== Test 2: For Loop with Sum ==="
int total = 0
for int j = 1; j <= 10; j = j + 1:
    total = total + j
end
print "Sum from 1 to 10:"
print total

# Test 3: Nested for loops
print "\n=== Test 3: Nested For Loops ==="
for int x = 1; x <= 3; x = x + 1:
    for int y = 1; y <= 3; y = y + 1:
        int product = x * y
        print product
    end
end

# Test 4: For loop with break
print "\n=== Test 4: For Loop with Break ==="
for int k = 0; k < 10; k = k + 1:
    if k == 5:
        break
    end
    print k
end

# Test 5: For loop with continue
print "\n=== Test 5: For Loop with Continue ==="
for int m = 0; m < 10; m = m + 1:
    if m % 2 == 0:
        continue
    end
    print m
end

print "\n=== All For Loop Tests Passed! ==="
